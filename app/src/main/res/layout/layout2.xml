<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/Btn_Volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickIntent"
            android:text="Inicio" />

        <Button
            android:id="@+id/Btn_Post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Post" />

        <Button
            android:id="@+id/Btn_Confirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickIntent"
            android:text="Usuario" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Config"
            tools:visibility="gone" />

        <Button
            android:id="@+id/Btn_Atras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickIntent"
            app:icon="@drawable/abc_vector_test" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout3"
        android:layout_width="416dp"
        android:layout_height="685dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LayoutVertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton20"
                    android:layout_width="82dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="45dp"
                    android:onClick="onClickIntent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="111dp"
                    android:layout_height="26dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="43dp"
                    android:layout_toEndOf="@+id/imageButton20"
                    android:layout_toRightOf="@+id/imageButton20"
                    android:text="Nombre Usuario" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="111dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/textView30"
                    android:layout_marginStart="90dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@+id/imageButton20"
                    android:layout_toRightOf="@+id/imageButton20"
                    android:text="Titulo Post" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="373dp"
                    android:layout_height="98dp"
                    android:layout_below="@+id/textView30"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="-105dp"
                    android:layout_marginLeft="-105dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/imageButton20"
                    android:layout_toRightOf="@+id/imageButton20"
                    android:onClick="onClickIntent"
                    android:text="Descripcion Post" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton21"
                    android:layout_width="82dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="45dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="111dp"
                    android:layout_height="26dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="43dp"
                    android:layout_toEndOf="@+id/imageButton21"
                    android:layout_toRightOf="@+id/imageButton21"
                    android:text="Nombre Usuario" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="111dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/textView31"
                    android:layout_marginStart="90dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@+id/imageButton21"
                    android:layout_toRightOf="@+id/imageButton21"
                    android:text="Titulo Post" />

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="373dp"
                    android:layout_height="98dp"
                    android:layout_below="@+id/textView31"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="-105dp"
                    android:layout_marginLeft="-105dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/imageButton21"
                    android:layout_toRightOf="@+id/imageButton21"
                    android:text="Descripcion Post" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="82dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="45dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="111dp"
                    android:layout_height="26dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="43dp"
                    android:layout_toEndOf="@+id/imageButton2"
                    android:layout_toRightOf="@+id/imageButton2"
                    android:text="Nombre Usuario" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="111dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/textView3"
                    android:layout_marginStart="90dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@+id/imageButton2"
                    android:layout_toRightOf="@+id/imageButton2"
                    android:text="Titulo Post" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="373dp"
                    android:layout_height="98dp"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="-105dp"
                    android:layout_marginLeft="-105dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/imageButton2"
                    android:layout_toRightOf="@+id/imageButton2"
                    android:text="Descripcion Post" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>